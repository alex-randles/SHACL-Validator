@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix dbpedia: <http://dbpedia.org/ontology/> .
@prefix ex: <http://example.com/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@base <http://example.com/base/> .

<MoviesTriplesMap> a rr:TriplesMap;
	rml:logicalSource [
		rml:source "Movies.csv";
		rml:referenceForumulation ql:CSV] ;
	rr:subjectMap [
		rr:template "https://example.com/movies#{movieID}" ;
		rr:class dbpedia:Film ;
	] ;
	rr:predicateObjectMap [
		rr:predicate ex:name ;
		rr:objectMap [ rml:reference "movieTitle"; rr:termType rr:Literal;]
	rr:predicateObjectMap [
		rr:predicate :year ;
		rr:objectMap [ rml:reference "year"; rr:termType rr:Literal; rr:datatype xsd:gYear; ]
	] ;
	]. 


<DirectorTriplesMap> a rr:TriplesMap;
	rml:logicalSource [
		rml:source "Directors.csv";
		rml:referenceForumulation ql:CSV] ;
	rr:subjectMap [
		rr:template "https://example.com/directors#{ID}" ;
		rr:class foaf:Person ;
	] ;
	rr:predicateObjectMap [
		rr:predicate ex:name ;
		rr:objectMap [ rml:reference "name"; rr:termType rr:Literal; ]
	] ;
	rr:predicateObjectMap [
		rr:predicate ex:dob ;
		rr:objectMap [ rml:reference "birthDate"; rr:termType rr:Literal; rr:datatype xsd:date; ]
	] ;
	rr:predicateObjectMap [
		rr:predicate director ;
		rr:objectMap [
			a rr:RefObjectMap ;
			rr:parentTriplesMap <MoviesTriplesMap> ;
			rr:joinCondition [ rr:child "DirectorID" ; rr:parent "personID"; ]
		]
	]. 
